resolver ${NGINX_LOCAL_RESOLVERS} valid=60s;
resolver_timeout 5s;

upstream api {
    server systemd-hub:8080 max_fails=3 fail_timeout=30s;
    keepalive 32;
}

upstream vod {
    server localhost:1935 max_fails=0;
    keepalive 32;
}

upstream live {
    server localhost:1936 max_fails=0;
    keepalive 32;
}
