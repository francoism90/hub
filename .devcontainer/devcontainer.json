{
    "name": "hub-devcontainer",
    "remoteUser": "docker",
    "containerUser": "docker",
    "containerEnv": {
        "HOME": "/home/docker"
    },
    "build": {
        "dockerfile": "./../containers/app/Dockerfile",
        "context": "./../containers/app"
    },
    "runArgs": ["--entrypoint=/usr/bin/bash", "--tz=local", "--userns=keep-id", "--network=systemd-hub"],
    "mounts": ["source=${localEnv:HOME}/.ssh,target=/home/docker/.ssh,type=bind,consistency=cached"],
    "forwardPorts": [3000, 5173]
}
