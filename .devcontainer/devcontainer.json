{
    "name": "hub-devcontainer",
    "remoteUser": "docker",
    "containerUser": "docker",
    "containerEnv": {
        "HOME": "/home/docker"
    },
    "runArgs": [
        "--entrypoint=/usr/bin/bash",
        "--tz=local",
        "--userns=keep-id",
        "--network=systemd-hub"
    ],
    "build": {
        "dockerfile": "./../containers/app/Dockerfile",
        "context": "./../containers/app"
    },
    "customizations": {
        "vscode": {
            "settings": {
                //
            }
        }
    }
}
