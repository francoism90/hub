{
    "editor.quickSuggestions": {
        "comments": "on",
        "strings": "on"
    },
    "eslint.useFlatConfig": true,
    "files.associations": {
        "*.css": "tailwindcss",
        "*.scss": "tailwindcss"
    },
    "intelephense.format.enable": false,
    "tailwindCSS.emmetCompletions": true,
    "tailwindCSS.experimental.classRegex": ["class:(.*?)", "->class(.*?)"],
    "tailwindCSS.includeLanguages": {
        "blade": "html",
        "blade.php": "html",
        "php": "html",
        "plaintext": "html",
        "vue": "html",
        "vue-html": "html"
    },
    "search.exclude": {
        "**/storage/app": true
    }
}
